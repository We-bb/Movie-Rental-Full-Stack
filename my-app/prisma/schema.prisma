generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Movie {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  thumbnail   String?
  title       String
  actors      String[]
  releaseYear Int

  @@map("movies")  // This line tells Prisma to use the 'movies' collection in MongoDB
}
